<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.genogram.mapper.AllFamilyMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.genogram.entity.AllFamily">
        <id column="id" property="id" />
        <result column="value" property="value" />
        <result column="first_letter" property="firstLetter" />
        <result column="sort" property="sort" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, value, first_letter AS firstLetter, sort
    </sql>

    <!--分页以及条件map实例-->
    <select id="queryMyItems" parameterType="java.util.Map" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM all_family
        WHERE
        1=1
        <if test="value!=null">
            value LIKE CONCAT("%",#{value},"%")
        </if>

    </select>

</mapper>
